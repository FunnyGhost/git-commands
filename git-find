
PREFIX=$(git rev-parse --show-prefix)
COLOUR=always

if [[ $1 == '--plain' || $1 == '-p' ]]; then
  COLOUR=no
  shift
fi

for pattern in $@; do
  greps+=" | grep --colour=$COLOUR $pattern"
done

if [[ -z $PREFIX ]]; then
    eval "git ls-files $greps"
else
    eval "git ls-files $greps" | sed s%`git rev-parse --show-prefix`%%
fi
